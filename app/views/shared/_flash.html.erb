<% flash.each do |type, msg| %>
  <div class="row justify-content-center mt-3">
    <div class="col-auto text-center">
      <% if type == "alert" %>
        <div class="alert alert-danger" role="alert">
          <%= msg %>
        </div>
      <% else %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>