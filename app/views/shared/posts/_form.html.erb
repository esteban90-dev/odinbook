<div class="row justify-content-center my-3">
  <div class="col-5 bg-white shadow rounded">
    <%= form_with model: model do |f| %>
      
      <div class="row mt-3">
        <div class="col">
          <%= f.label :body, class: "form-label d-none" %>
          <%= f.text_area :body, placeholder: "What's on your mind?", class: "form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-auto mt-2">
          <%= f.label :picture %>
        </div>
        <div class="col">
          <%= f.file_field :picture, placeholder: "Upload an image", accept: "image/png,image/jpeg", class: "form-control" %>
          <%= f.hidden_field :redirect, value: redirect %>
        </div>
      </div>

      <% if post.errors.any? %>
        <div class="row mt-3">
          <div class="col text-danger">
            <div id="error_explanation">
              <ul>
                <% post.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row my-3">
        <div class="col d-grid gap-2">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
        
    <% end %>
  </div>
</div>

