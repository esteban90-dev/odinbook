<div data-test="comment-<%= comment.id %>">

  <div class="row mb-3">

    <div class="col-1 text-center">
      <%= image_tag comment.commenter.profile.picture.variant(resize_to_limit: [25,25]), class: "rounded-circle" %>
    </div>

    <div class="col">
      <div class="row">
        <div class="col-auto rounded bg-gray-200">

          <div class="row">
            <div class="col">
              <%= link_to comment.commenter.name, user_profile_path(comment.commenter.id), class: "link-dark" %>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col">
              <sub><%= time_tag comment.updated_at, class: "text-secondary" %></sub>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <%= comment.body %>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="col-2 my-auto text-center">
      <div class="row">
        <% if current_user == comment.commenter %>
          <div class="dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
              ...
            </a>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <li><%= link_to "edit", edit_comment_path(comment.id, comment: { redirect: redirect } ), class: "dropdown-item" %></li>
              <li><%= link_to "delete", comment_path(comment.id, comment: { redirect: redirect } ), method: :delete, class: "dropdown-item" %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>