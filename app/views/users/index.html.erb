<% @users.each do |user| %>
  <div id=<%= user.id %>>
    <%= user.name %>
    <% if current_user.requested_friends.include?(user) %>
      friend request sent
    <% else %>
      <%= link_to "Add friend", friend_requests_path("friend_request" => { requestor_id: current_user.id, requestee_id: user.id }), method: :post %>
    <% end %>
  </div>
<% end %>