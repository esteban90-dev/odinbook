<div class="incoming">
  <% @incoming_friend_requests.each do |ifr| %>
    <div data-test="user-<%= ifr.requestor.id %>">
      <%= ifr.requestor.name %>
      <%= link_to "accept", accept_friend_request_path(ifr.id), method: :delete %>
      <%= link_to "ignore", ignore_friend_request_path(ifr.id), method: :delete %>
    </div>
  <% end %>
</div>

<div class="sent">
  <% @sent_friend_requests.each do |sfr| %>
    <div data-test="user-<%= sfr.requestee.id %>">
      <%= sfr.requestee.name %>
    </div>
  <% end %>
</div>